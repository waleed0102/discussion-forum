<div class="container">
  <div class="page-header">
    <h1>Experts</h1>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Status</th>
        <th class="text-center">Profession</th>
        <th class="text-center">Service</th>
      </tr>
    </thead>
    <tbody>
      <% @users.where(type: 'Expert').each do |e| %>
        <tr>
          <td class="text-center"><%= e.name %></td>
          <td class="text-center"><%= e.status %></td>
          <td class="text-center"><%= e.profession %></td>
          <td class="text-center"><%= e.service %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <div class="page-header">
    <h1>Novices</h1>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Status</th>
        <% if policy(User).update? %>
          <th class="text-center">Action</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.where(type: 'Novice').each do |e| %>
        <tr>
          <td class="text-center"><%= e.name %></td>
          <td class="text-center"><%= e.status %></td>
          <% if policy(User).update? %>
            <td class="text-center"><%= link_to "Edit", edit_user_path(e), class: 'btn btn-outline-primary'%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>