<%= form_for(@user, url: users_path) do |f| %>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select(:status, options_for_select([['Qualified', 'qualified'], ['Not Qualified', 
        'not_qualified'], ['Banned', 'banned']]), {}, {class: "form-control"}) %>
    <br>
    <%= f.submit 'Update Novice', class: 'btn btn-success' %>
  </div>
<% end %>
